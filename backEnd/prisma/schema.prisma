generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Survey {
  id          Int        @id @default(autoincrement())
  title       String
  groups      String?
  createdAt   DateTime   @default(now())
  closedAt    DateTime   @default(now())
  audience    String
  contentType String?
  responses   Response[]
}

model News {
  id   Int @id @default(autoincrement())
  title String
  createdAt DateTime @default(now())
  content String 
  attachments NewsAttachment[]
}

model NewsAttachment {
  id           Int      @id @default(autoincrement())
  newsId       Int
  fileName     String
  originalName String
  mimeType     String
  size         Int
  path         String
  createdAt    DateTime @default(now())

  news         News     @relation(fields: [newsId], references: [id], onDelete: Cascade)
}

model Response {
  id        Int      @id @default(autoincrement())
  surveyId  Int
  data      Json
  createdAt DateTime @default(now())
  survey    Survey   @relation(fields: [surveyId], references: [id])
  userId    String
  user      User     @relation(fields: [userId], references: [id])
}

model Attachment {
  id           Int      @id @default(autoincrement())
  surveyId     Int
  fileName     String
  originalName String
  mimeType     String
  size         Int
  path         String
  createdAt    DateTime @default(now())
}

model User {
  id        String   @id @default(uuid())
  userName  String
  email     String   @unique
  passWord  String?        
  role      String  @default("USER")
  createdAt DateTime @default(now())
  responses Response[]
}

enum Audience {
  USER
  EXPERT
}

enum ContentType {
  SURVEY
  POST
}
